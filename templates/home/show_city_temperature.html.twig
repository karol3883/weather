{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container mt-2">
        <div class="row align-items-center">
            <div class="col-8">
                <h3>Temperatura w mieście {{ cityName }} aktualnie wynosi {{ currentTemperature }} </h3>
            </div>
            <div class="col">
                <h3> Inne dostępne miasta!</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-8">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Data</th>
                        <th scope="col">Temperatura</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for temperature in temperatures %}
                        <tr>
                            <th scope="row">{{ loop.index }}</th>
                            <td>{{ temperature.date }}</td>
                            <td>{{ temperature.temperature }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
            <div class="col">
                {{ render(controller('App\\Controller\\WeatherController::otherAvailableCities', {'city' : cityName })) }}
            </div>
        </div>
    </div>
{% endblock %}
